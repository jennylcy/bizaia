<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/layout_shadow"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/viewTagTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/cr_443cb2" />

    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tag_01" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="test测试"
        android:lines="1"
        android:textColor="@color/crFFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_tag"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_name"
        android:paddingRight="10dp"
        android:text="test测试"
        android:visibility="gone"
        android:textColor="@color/cr595959"
        android:textSize="@dimen/size_sp_12" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxEms="12"
        android:layout_marginTop="15dp"
        android:lines="1"
        android:layout_toRightOf="@id/iv_head"
        android:gravity="center_vertical"
        android:text="test测试test测试testtest测试test测试test"
        android:textColor="@color/cr_2e2e2e"
        android:textSize="@dimen/size_sp_16" />

    <ImageView
        android:id="@+id/iv_organization_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_heightPercent="56.25%w"
        android:layout_below="@id/iv_head"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignBottom="@id/iv_organization_cover"
        android:layout_marginLeft="10dp"
        android:background="@color/cr1F2034"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:gravity="center"
        android:text="test测试"
        android:textColor="@color/crFFFFFF"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/iv_organization_cover"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tv_price"
        >
        <TextView
            android:id="@+id/tvLimit"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="@color/crAB1F2034"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:text="@string/provide_look"
            android:layout_weight="1"
            android:textColor="@color/crFFFFFF"
            android:visibility="visible"
            android:textSize="@dimen/size_sp_12" />
        <TextView
            android:id="@+id/tvSold"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@color/crAB1F2034"
            android:gravity="right|center_vertical"
            android:text="@string/provide_look"
            android:textColor="@color/crFFFFFF"
            android:textSize="@dimen/size_sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_organization_cover"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="test测试"
        android:textColor="@color/cr_2e2e2e"
        android:textSize="@dimen/size_sp_14" />

    <TextView
        android:id="@+id/tv_org_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/tv_talker"
        android:lines="1"
        android:text="test测试test测试test测试test测试"
        android:textColor="@color/cr595959"
        android:textSize="@dimen/size_sp_13" />

    <TextView
        android:id="@+id/tv_num_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_info_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tv_talker"
        android:gravity="right"
        android:lines="1"
        android:text="test测试"
        android:textColor="@color/cr595959"
        android:textSize="@dimen/size_sp_13" />

    <TextView
        android:id="@+id/tv_talker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:maxEms="8"
        android:text="test测试test测试test测试test测试test测试"
        android:textColor="@color/cr595959"
        android:textSize="@dimen/size_sp_13" />
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_delete"
        android:visibility="gone" />
</com.zhy.android.percent.support.PercentRelativeLayout>