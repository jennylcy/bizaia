<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/monthly_sub_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/crFFFFFF"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/crD8D8D8" />

    <FrameLayout
        android:id="@+id/head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="7dp"
            android:scaleType="fitXY" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/head_layout"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="7dp"
        android:lines="1"
        android:text="test测试test测试test测试test测试test测试"
        android:textColor="@color/cr_2e2e2e"
        android:textSize="@dimen/size_sp_15" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="test测试test测试test测试test测试test测试"
        android:textColor="@color/cr595959"
        android:textSize="@dimen/size_sp_15" />
    <TextView
        android:id="@+id/tv_digest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="test测试test测试test测试test测试test测试"
        android:textColor="@color/cr595959"
        android:textSize="@dimen/size_sp_15" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_digest"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:lines="1"
        android:text="test测试test测试test "
        android:textColor="@color/cr595959"
        android:textSize="@dimen/size_sp_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_layout"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="test测试"
            android:textColor="@color/cr595959"
            android:textSize="@dimen/size_sp_14" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_name"
            android:visibility="gone"
            android:src="@drawable/icon_wen" />

        <TextView
            android:id="@+id/tv_browse_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="1"
            android:maxEms="8"
            android:text="sdsdsd "
            android:textColor="@color/cr595959"
            android:textSize="@dimen/size_sp_14" />

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/tv_browse_num"
            android:gravity="right|center_vertical"
            android:lines="1"
            android:text="test测试"
            android:textColor="@color/cr595959"
            android:textSize="@dimen/size_sp_14" />

    </RelativeLayout>

</RelativeLayout>