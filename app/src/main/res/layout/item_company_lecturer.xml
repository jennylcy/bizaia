<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp">

    <ImageView
        android:id="@+id/ivLectureres"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvLecturerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivLectureres"
        android:text="李先生"
        android:textColor="@color/cr595959"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLecturerName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/ivLectureres"
        tools:text="xxx商社老板"
        android:textColor="@color/cr595959"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvLecIntroduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLectureres"
        android:layout_marginTop="12dp"
        android:textColor="@color/cr595959"
        android:textSize="14sp"
        tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>
</RelativeLayout>