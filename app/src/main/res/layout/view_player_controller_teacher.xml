<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc000000">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back_white"/>
        <TextView
            android:id="@+id/tvPlayerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textSize="15sp"
            android:textColor="@color/crFFFFFF"
            android:layout_toRightOf="@+id/ivBack"
            android:maxWidth="300dp"
            android:text=""/>
        <View
            android:id="@+id/viewLineOne"
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tvPlayerTitle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@color/cr595959"/>
        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textSize="15sp"
            android:textColor="@color/crFFFFFF"
            android:layout_toRightOf="@+id/viewLineOne"
            android:text="@string/live_online_num"/>
        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_share_white"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc000000"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnLive"
            android:layout_width="94dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:lines="1"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/bt_jiaguanzhu"
            android:textColor="@color/crFFFFFF"
            android:text="@string/live_start"/>
    </RelativeLayout>
</RelativeLayout>