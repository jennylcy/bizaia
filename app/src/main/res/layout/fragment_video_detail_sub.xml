<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crFFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cr_2e2e2e"
            android:textSize="@dimen/size_sp_16"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"/>
         <View
             android:layout_width="match_parent"
             android:layout_height="1px"
             android:layout_margin="5dp"
             android:background="@color/crD8D8D8"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="5dp"
            android:text="test测试test测试test测试test测试test测试test测试test测试test测试test测试"
            android:textSize="@dimen/size_sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/crD8D8D8" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="5dp"
            android:text="test测试test测试test测试test测试test测试test测试test测试test测试test测试test测试test测试test测试test测试test \n测试test测试test测试"
            android:textSize="@dimen/size_sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/crD8D8D8" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTeacher"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="10dp">

            <ImageView
                android:id="@id/iv_head"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="test测试"
                android:textColor="@color/cr595959"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_person_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:text="test测试test测试test测试test测试test测试test测试"
                android:textColor="@color/cr595959"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
