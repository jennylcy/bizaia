<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/monthly_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:background="@color/crFFFFFF"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/iv_monthly_cover"
        android:layout_width="140dp"
        android:layout_height="185dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/view_cover"
        android:layout_width="140dp"
        android:layout_height="185dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/cr2d000000"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="140dp"
        android:layout_height="185dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/crFCC101"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_monthly_cover"
        android:background="@color/cr1F2034"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:text="test测试"
        android:textColor="@color/crFFFFFF"
        android:textSize="@dimen/size_sp_12" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="测试test测试test测试test"
            android:textColor="@color/cr_2e2e2e"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:text="测试test测试test测试test测试test测试test测试test测试test"
            android:textSize="@dimen/size_sp_12" />

        <LinearLayout
            android:id="@+id/ll_label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_introduce"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/circle_5a5a5a" />

            <TextView
                android:id="@+id/tv_sub_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="3dp"
                android:lines="1"
                android:text="测试test测试测试test测试test测试"
                android:textSize="@dimen/size_sp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_label1"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/circle_5a5a5a" />

            <TextView
                android:id="@+id/tv_sub_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="3dp"
                android:lines="1"
                android:text="test测试测试test测试"
                android:textSize="@dimen/size_sp_14" />

        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ll_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_monthly_cover"
        android:layout_gravity="bottom"
        android:layout_marginLeft="160dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_js"
            android:background="@drawable/round_line_a6a6a6_radius_5"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:text="@string/monthly_btn_all"
            android:textColor="@color/cr595959"
            android:textSize="15sp" />


    </FrameLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/icon_delete"
        android:visibility="gone" />

</RelativeLayout>
