<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cr7f000000"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/pop_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_ffffff"
        android:clickable="true"
        android:gravity="center"
        android:minWidth="260dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/sure_to_delete"
            android:textColor="@color/cr_1156bf"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/state_round_bg1_1156bf_bg2_a6a6a6"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/btn_cancel"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/state_round_bg1_1156bf_bg2_a6a6a6"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/btn_sure"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>