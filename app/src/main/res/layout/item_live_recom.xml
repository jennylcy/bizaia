<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linContent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:background="@drawable/layout_shadow"
              android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/crFFFFFF"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:id="@+id/viewTagTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cr_307f11"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_user_blue"
            app:riv_mutate_background="true"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ivIcon"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxEms="12"
            android:text="pil"
            android:textColor="@color/cr_2e2e2e"
            android:textSize="@dimen/size_sp_16"/>

        <TextView
            android:id="@+id/ivTag"
            android:layout_width="94dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/tag_03"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:textColor="@color/crFFFFFF"
            android:text="预告"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ivTag"
            android:layout_marginTop="4dp"
            android:text="2017年3月6日15:33"
            android:textColor="@color/cr595959"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/iv_organization_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_heightPercent="56.25%w"
            android:layout_below="@+id/ivIcon"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignBottom="@+id/iv_organization_cover"
            android:background="@color/cr_0f0f27"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="￥200"
            android:textColor="@color/crFFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvFree"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignBottom="@+id/tvPrice"
            android:layout_toRightOf="@+id/tvPrice"
            android:background="@color/cr_454553"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text=""
            android:textColor="@color/crFFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_organization_cover"
            android:layout_marginTop="10dp"
            android:text="日语高级培训"
            android:textColor="@color/cr_2e2e2e"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="礼仪习惯"
                android:textColor="@color/cr595959"
                android:textSize="@dimen/size_sp_13"/>

            <TextView
                android:id="@+id/tvTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="讲师：李"
                android:textColor="@color/cr595959"
                android:textSize="@dimen/size_sp_13"/>

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="限定人数：无限制"
                android:textColor="@color/cr595959"
                android:textSize="@dimen/size_sp_13"/>
        </LinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line_top"
        />
</LinearLayout>