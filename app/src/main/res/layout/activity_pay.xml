<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crFFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@drawable/layout_shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_pay_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/setting_title"
            android:textColor="@color/cr_2e2e2e"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/icon_kefu" />

    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="58dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_circle_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_yuan">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jp_yin"
                            android:textColor="@color/cr595959"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_remain_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/cr_ff0000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_account_balance"
                        android:textColor="@color/cr595959"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_circle_money"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/crD8D8D8" />


            <TextView
                android:id="@+id/tv_add_money"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bt_zhifu"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:layout_centerVertical="true"
                android:text="@string/mine_recharge"
                android:textColor="@color/crFFFFFF"
                android:layout_below="@+id/viewLine"
                android:gravity="center"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_remain_pay"
                android:layout_below="@+id/tv_add_money"
                android:text="@string/remain_pay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bt_zhifu"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/crFFFFFF"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_other_pay"
                android:layout_below="@+id/tv_remain_pay"
                android:text="@string/pay_other_methrod"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bt_zhifu"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/crFFFFFF"
                android:gravity="center"
                android:textSize="16sp" />

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>