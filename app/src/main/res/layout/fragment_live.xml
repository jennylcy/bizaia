<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flLiveContentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bizaia.zhongyin.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@drawable/layout_shadow"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tlLive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:layout_gravity="bottom"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:tabIndicatorHeight="0dp" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/icon_search" />
        <RelativeLayout
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:padding="10dp"
            android:layout_gravity="right|center_vertical">
            <ImageView
                android:id="@+id/btn_message"
                android:layout_width="@dimen/action_bar_height"
                android:layout_height="@dimen/action_bar_height"
                android:clickable="true"
                android:src="@drawable/icon_messages" />
            <ImageView
                android:id="@+id/ivMsgTips"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:src="@drawable/msg_tips"/>
        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpLive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/action_bar_height" />

</FrameLayout>
