<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/layout_shadow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/cr_2e2e2e"
        android:lines="1"
        android:text="test测试test测试test测试test测试tetest测试"
        android:textSize="@dimen/size_sp_14" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimaryDark" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_img"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8dp"
        android:lines="1"
        android:text="sdfsfd"
        android:textSize="@dimen/size_sp_14" />


    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8dp"
        android:lines="1"
        android:text="sdfsfd"
        android:textSize="@dimen/size_sp_14" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8dp"
        android:lines="1"
        android:text="sdfsfd"
        android:textSize="@dimen/size_sp_14" />

    <TextView
        android:id="@+id/tv_work_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8dp"
        android:lines="1"
        android:text="sdfsfd"
        android:textSize="@dimen/size_sp_14" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignBottom="@id/iv_img"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/cr1F2034"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:textColor="@color/crFFFFFF"
        android:lineSpacingExtra="8dp"
        android:lines="1"
        android:text="tetest测试"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_browse_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/iv_img"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="tetest测试"
        android:textSize="@dimen/size_sp_12" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-2dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/tag_bg_d8d8d8"
        android:gravity="center"
        android:lines="1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="tetest测试"
        android:textColor="@color/crFFFFFF"
        android:textSize="@dimen/size_sp_14" />

    <TextView
        android:id="@+id/tvSubscribe"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:background="@color/cr_2e76d0"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/crEBEBEB"
        android:lines="1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="tetest测试"
        android:textSize="@dimen/size_sp_14"
        android:visibility="gone"
        android:layout_above="@+id/tv_info"/>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:src="@drawable/icon_delete" />
</RelativeLayout>